<p id="notice"><%= notice %></p>

<h2 align="center">Name Lists</h1>

 <thead>
  <table class="center">
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Age</th>
      <th colspan="1"><h4>Show</h4></th>
      <th colspan="1"><h4>Edit</h4></th>
      <th colspan="1"><h4>Destroy</h4></th>
    </tr>
  
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.about %></td>
        <td><%= post.age %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h2 align="center" >
<%=link_to 'New Post' , new_post_path %>
</h2>
